{
  "name": "storage-calculator",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "^24.11.1"
  },
  "scripts": {
    "lint": "pnpm -w run lint:all",
    "dev:backend": "pnpm --filter backend dev",
    "build:backend": "pnpm --filter backend build",
    "dev:frontend": "pnpm --filter frontend dev",
    "lint:all": "pnpm --filter backend lint && pnpm --filter frontend lint",
    "build:all": "pnpm --filter backend build && pnpm --filter frontend build",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md,css,html}\" --write",
    "e2e:api": "playwright test -c playwright.config.ts --project=api",
    "e2e:ui": "playwright test -c playwright.config.ts --project=ui",
    "e2e:all": "playwright test -c playwright.config.ts",
    "deps:check:major": "ncu --target latest",
    "deps:update:minor": "ncu -u --target minor && pnpm install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "@playwright/test": "^1.57.0",
    "npm-check-updates": "^19.3.1",
    "prettier": "^3.7.4"
  }
}
